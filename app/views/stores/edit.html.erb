<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-md mb-4">
    <p><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-md mb-4">
    <p><%= alert %></p>
  </div>
<% end %>

<div class="content-container">  
  <div>
    <h1>Editing store</h1>
  
    <%= render "form", store: @store %>
  </div>
  
  <br>
  
  <div>
    <%= link_to "Show this store", @store, class: "mr-2", style: "white-space: nowrap;" %>|
    <%= link_to "Back to stores", stores_path, style: "white-space: nowrap;" %>
  </div>
</div>
