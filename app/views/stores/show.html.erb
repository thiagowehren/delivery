<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-md mb-4">
    <p><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-md mb-4">
    <p><%= alert %></p>
  </div>
<% end %>

<div class="content-container">
  <%= render @store %>
  <% if current_user.admin? || current_user.eql?(@store.user)%>
    <%= link_to "Edit", edit_store_path(@store) %> |
  <% end %>

  <%= link_to "Back to stores", stores_path %>
  
  <% if current_user.admin? || current_user.eql?(@store.user) %>
    <%= button_to "Delete", @store, method: :delete, class: "btn-delete" %>
  <% end %>
</div>

<div class="content-container mt-4">
  <h3>Products</h3>
  
  <p><%= link_to "Show Products", store_products_path(@store) %></p>

  <% if current_user.admin? || current_user.eql?(@store.user)%>
    <p><%= link_to "New Product", new_store_product_path(@store) %></p>
  <% end %>
  <hr />
  <h3>Orders</h3>

  <p><%= link_to "Show Orders", store_store_orders_path(@store) %></p>
  <% if current_user.admin? %>
    <p><%= link_to "New Order", orders_new_store_path(@store) %></p>
  <% end %>
  </div>
</div>
